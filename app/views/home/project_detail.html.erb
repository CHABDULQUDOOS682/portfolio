<div class="main-content">
  <div class="top-nav">
    <h3 class="heading heading-sec section-heading">Project Details</h3>
  </div>

  <div class="dashboard-content">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <div class="projects-list__project">
      <h3 class="projects-list__heading">
        <%= @project.title %>
      </h3>

      <!-- Image Slider -->
      <div class="slider-container">
        <button class="slider-btn prev-btn">&#10094;</button>

        <div class="slider">
          <% if @project.images.attached? %>
            <% @project.images.each_with_index do |image, index| %>
              <div class="slide <%= 'active' if index == 0 %>">
                <%= image_tag image, class: "projects-list__img" %>
              </div>
            <% end %>
          <% else %>
            <div class="slide active">
              <p class="no-image">No Image Available</p>
            </div>
          <% end %>
        </div>

        <button class="slider-btn next-btn">&#10095;</button>
      </div>

      <p class="text-tertiary projects-list__text-tertiary">
        <%= @project.description %>
      </p>

      <div class="projects-list__actions">
        <%= link_to "#{root_path}#MyProjects", class: "btn-icon btn-view" do %>
          ðŸ”™ Back
        <% end %>
      </div>
    </div>
  </div>
</div>

