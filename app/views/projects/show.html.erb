<div class="main-content">
  <div class="top-nav">
    <h3 class="heading heading-sec section-heading">Project Details</h3>
  </div>

  <div class="dashboard-content">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <div class="projects-list__project">
      <h3 class="projects-list__heading">
        <%= @project.title %>
      </h3>

      <div class="projects-list__img-cont">
        <% if @project.images.attached? %>
          <% @project.images.each do |image| %>
            <%= image_tag image, class: "projects-list__img" %>
          <% end %>
        <% else %>
          <p class="no-image">No Image Available</p>
        <% end %>
      </div>

      <p class="text-tertiary projects-list__text-tertiary">
        <%= @project.description %>
      </p>

      <% if current_user.present? %>
        <div class="projects-list__actions">
          <%= link_to edit_project_path(@project), class: "btn-icon btn-edit" do %>
            ✏️ Edit
          <% end %>

          <%= link_to admin_dashboard_path, class: "btn-icon btn-view" do %>
            🔙 Back
          <% end %>

          <%= button_to @project, method: :delete, class: "btn-icon btn-delete", data: { confirm: "Are you sure?" } do %>
            🗑️ Delete
          <% end %>
        </div>
      <% end %>

    </div>

  </div>
</div>
